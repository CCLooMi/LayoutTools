<s-v class="scrollable">
    <cc-form v>
        <form-group>
            <form-input type="radio">
                <label>
                    <input type="radio" value="normal" cc-model="use">Normal
                </label>
                <label>
                    <input type="radio" value="cc-repeat" cc-model="use">Use cc-repeat
                </label>
                <label>
                    <input type="radio" value="cc-for" cc-model="use">Use cc-for
                </label>
            </form-input>
        </form-group>
        <form-group cc-show="use=='cc-for'">
            <label>Exp</label>
            <form-input>
                <input type="text" cc-model="exp">
            </form-input>
        </form-group>
        <form-group>
            <label>LabelStr</label>
            <form-input>
                <textarea type="text" cc-model="labelStr" rows="5" style="resize:none"></textarea>
            </form-input>
        </form-group>
    </cc-form>
</s-v>