<sv class="scrollable">
    <cc-form v>
        <form-group>
            <label>Name</label>
            <form-input>
                <input type="text"
                placeholder="name"
                cc-model="name"
                cc-l-max="255:Name cannot exceed 255 characters！"
                cc-require=":Name cannot be empty！"
                file-name=":Name cannot contain special characters！">
            </form-input>
        </form-group>
        <form-group>
            <label>Placeholder</label>
            <form-input>
                <input type="text" placeholder="placeholder" cc-model="placeholder">
            </form-input>
        </form-group>
        <form-group>
            <label>Label</label>
            <form-input>
                <input type="text" placeholder="label" cc-model="label">
            </form-input>
        </form-group>
        <form-group class="checks">
            <label>Checks</label>
            <form-input type="checkbox" cc-repeat="c in checkList">
                <label>
                    <input type="checkbox" cc-model="checks[$index]" cc-value="c" name="checks">{{c}}
                </label>
                <input-group cc-show="checks[$index]">
                    <form-input>
                        <input type="text" cc-model="checkArgs[$index]" placeholder="CheckArg">
                    </form-input>
                    <form-input>
                        <input type="text" cc-model="checkTips[$index]" placeholder="ErrorTips">
                    </form-input>
                </input-group>
            </form-input>
        </form-group>
        <form-group>
            <pre>{{code()}}</pre>
        </form-group>
        <style>
            .checks {
                grid-gap:2mm !important;
            }
            .checks > form-input {
                grid-auto-columns:1fr 1fr 3fr;
            }
            input-group {
                display:grid;
                grid-template-columns:1fr 3fr;
                grid-gap:2mm;
                flex-grow:1;
                margin-left:2mm;
            }
        </style>
    </cc-form>
</sv>